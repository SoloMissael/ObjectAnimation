<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="81dp">

    <Button
        android:id="@+id/btnRun3"
        android:layout_width="118dp"
        android:layout_height="49dp"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="6dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="6dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="12dp"
        android:layout_weight="1"
        android:onClick="btnCycle"
        android:text="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnRun"
        app:layout_constraintStart_toEndOf="@+id/btnRu2"
        app:layout_constraintTop_toBottomOf="@+id/btnRun4" />

    <Button
        android:id="@+id/btnRun"
        android:layout_width="111dp"
        android:layout_height="46dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_weight="1"
        android:onClick="btnBounce"
        android:text="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnRun4" />

    <Button
        android:id="@+id/btnRu2"
        android:layout_width="122dp"
        android:layout_height="46dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="9dp"
        android:layout_marginStart="9dp"
        android:layout_weight="1"
        android:onClick="btnAcce"
        android:text="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnRun4"
        android:layout_width="122dp"
        android:layout_height="48dp"
        android:layout_marginBottom="10dp"
        android:onClick="btnDec"
        android:text="1"
        app:layout_constraintBottom_toTopOf="@+id/btnRun"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/animationCanvas" />

    <RelativeLayout
        android:id="@+id/animationCanvas"
        android:layout_width="455dp"
        android:layout_height="0dp"
        android:layout_above="@+id/buttonContainer"
        android:layout_marginBottom="60dp"
        app:layout_constraintBottom_toTopOf="@+id/btnRun4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="UnknownId">

        <ImageView
            android:id="@+id/faceIcon"
            android:layout_width="377dp"
            android:layout_height="76dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="83dp"
            android:src="@drawable/sol" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>